{
  "name": "caffis-map-service-backend",
  "version": "1.0.0",
  "description": "Caffis Map Service Backend - Real-time location and coffee meetup service",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "logs": "tail -f logs/map-service.log",
    "logs:error": "tail -f logs/error.log",
    "redis:flush": "redis-cli FLUSHDB",
    "health": "curl http://localhost:5001/api/health"
  },
  "keywords": [
    "caffis",
    "map",
    "real-time",
    "socket.io",
    "geolocation",
    "coffee",
    "microservice"
  ],
  "author": "Caffis Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "geolib": "^3.3.4",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "redis": "^5.5.6",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,json",
    "ignore": ["tests/", "logs/"],
    "env": {
      "NODE_ENV": "development"
    }
  }
}