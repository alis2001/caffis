# caffis-map-service/backend/.env.example

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5001
LOG_LEVEL=info

# ============================================
# JWT AUTHENTICATION (SAME AS MAIN APP)
# ============================================
JWT_SECRET=your_jwt_secret_here_same_as_main_app

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MAIN APP INTEGRATION
# ============================================
MAIN_APP_API_URL=http://localhost:5000/api
MAIN_APP_API_KEY=your_api_key_here

# ============================================
# EXTERNAL API SERVICES
# ============================================
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ============================================
# MAPBOX CONFIGURATION (for frontend)
# ============================================
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# ============================================
# CORS CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://caffis.app

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CACHE TTL SETTINGS (in seconds)
# ============================================
USER_LOCATION_TTL=300
COFFEE_SHOPS_TTL=3600
USER_PROFILE_TTL=1800

# ============================================
# GEOLOCATION SETTINGS
# ============================================
DEFAULT_CITY=torino
MAX_SEARCH_RADIUS_METERS=5000
CLUSTER_RADIUS_METERS=500

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000